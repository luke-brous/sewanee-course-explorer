generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Course {
  id          String   @id @default(cuid())
  code        String   @unique              // e.g. "CS 101"
  title       String                        // e.g. "Intro to Computer Science"
  description String?
  instructor  String?
  days        String?                       // e.g. "MWF"
  startTime   String?
  endTime     String?
  location    String?
  credits     String?

  // Live data fields (for the 30-min updates)
  enrolled    Int      @default(0)
  limit       Int      @default(0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}